@page "/Account/Login"
@attribute [AllowAnonymous]

<PageTitle>Вход</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem md="12"
             xs="12">
        <MudText Align="Align.Center"
                 GutterBottom
                 Typo="Typo.h3">
            Войти в систему
        </MudText>
    </MudItem>

    <MudItem md="6"
             xs="12">
        <EditForm FormName="login"
                  method="post"
                  Model="Input"
                  OnValidSubmit="LoginUserAsync">
            <DataAnnotationsValidator />

            <MudText GutterBottom
                     Typo="Typo.body1">
                Пожалуйста, введите свои учетные данные
            </MudText>

            <MudGrid>
                <MudItem md="12"
                         xs="12">
                    <MudTextField @bind-Value="Input.Login"
                                  For="@(() => Input.Login)"
                                  Label="Электронная почта или имя пользователя"
                                  Placeholder="name@example.com"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "true" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12"
                         xs="12">
                    <MudTextField @bind-Value="Input.Password"
                                  For="@(() => Input.Password)"
                                  InputType="InputType.Password"
                                  Label="Пароль"
                                  Placeholder="пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "current-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12"
                         xs="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Color="Color.Primary"
                               FullWidth
                               Variant="Variant.Filled">
                        Войти
                    </MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>

        <MudDivider Class="my-4" />

        <MudStack Spacing="2">
            <MudText Typo="Typo.h6">Вход через внешние сервисы</MudText>
            <MudText Typo="Typo.caption"
                     Color="Color.Info">
                Используйте один из провайдеров ниже. Для входа требуется доступ к вашему email.
            </MudText>

            <MudStack AlignItems="AlignItems.Center">
                <MudButton Color="Color.Secondary"
                           FullWidth
                           OnClick="OnAuthLogin"
                           StartIcon="@Icons.Material.Filled.Login"
                           Variant="Variant.Outlined">
                    Войти через bob217.Auth
                </MudButton>

                <MudButton Color="Color.Secondary"
                           FullWidth
                           OnClick="OnGitHubLogin"
                           StartIcon="@Icons.Custom.Brands.GitHub"
                           Variant="Variant.Outlined">
                    Войти через GitHub
                </MudButton>
            </MudStack>
        </MudStack>

        <MudDivider Class="my-4" />

        <MudGrid>
            <MudItem md="12"
                     xs="12">
                <MudLink Href="@(NavigationManager.GetUriWithReturnUrl("Account/Register", ReturnUrl).ToString())">
                    Нет аккаунта? Зарегистрируйтесь
                </MudLink>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>
